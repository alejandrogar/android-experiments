<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageCirlce"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:transitionName="image_category"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CategorÃ­a uno"
            android:gravity="center_vertical"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:paddingTop="@dimen/tab_padding_bottom"
            android:paddingLeft="@dimen/tab_padding_bottom"
            android:paddingBottom="@dimen/tab_padding_bottom"
            android:layout_alignBottom="@+id/imageCirlce"
            android:layout_toEndOf="@+id/imageCirlce"/>

        <android.support.v7.widget.CardView
            android:layout_width="40sp"
            android:layout_height="30sp"
            android:elevation="3dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/newcard"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="38"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="12sp"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@color/TextIcons"
                android:layout_below="@+id/newcard"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/launcher"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"/>

</RelativeLayout>