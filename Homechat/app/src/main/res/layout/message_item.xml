<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardElevation="2dp"
    app:cardMaxElevation="8dp"
    app:cardCornerRadius="2dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <RelativeLayout
            android:id="@+id/message_first_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="11dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image">

            <!--<TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="title"
                android:text="Britta Holt"
                android:layout_marginLeft="8sp"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                android:textColor="#fff"/>-->

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:transitionName="title"
                android:text="We"
                android:background="@drawable/message"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginLeft="8dp"
                android:padding="10dp"
                android:layout_marginRight="100dp"
                android:layout_alignParentStart="true" />

            <!--<TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:transitionName="title"
                android:text="Fecha"
                android:textSize="10dp"
                android:gravity="right"
                android:layout_marginRight="8dp"
                android:foregroundGravity="right"
                android:textColor="#fff"
                android:layout_below="@+id/message"
                android:layout_alignParentEnd="true" />-->

            <ImageView
                android:id="@+id/image_in_message"
                android:layout_width="200dp"
                android:visibility="visible"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:transitionName="image_in_message"
                android:layout_below="@+id/message"
                android:src="@drawable/preview"/>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/message_second_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <!--<TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="title"
            android:text="Britta Holt"
            android:layout_marginLeft="8sp"
            android:textSize="10sp"
            android:layout_marginTop="8dp"
            android:textColor="#fff"/>-->

        <TextView
            android:id="@+id/message_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:transitionName="title"
            android:text="Lorem ipsum dolor sit amet consectetur ading elit"
            android:textSize="14sp"
            android:background="@drawable/message_second"
            android:textColor="#fff"
            android:layout_marginLeft="100dp"
            android:padding="10dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentEnd="true" />

        <!--<TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:transitionName="title"
            android:text="Fecha"
            android:textSize="10dp"
            android:gravity="right"
            android:layout_marginRight="8dp"
            android:foregroundGravity="right"
            android:textColor="#fff"
            android:layout_below="@+id/message"
            android:layout_alignParentEnd="true" />-->

        <ImageView
            android:id="@+id/image_in_message_second"
            android:layout_width="200dp"
            android:visibility="gone"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:transitionName="image_in_message_second"
            android:layout_below="@+id/message_second"
            android:layout_alignParentEnd="true"
            android:src="@drawable/preview"/>

    </RelativeLayout>

</RelativeLayout>