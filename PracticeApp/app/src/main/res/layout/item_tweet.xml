<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp"
    android:paddingBottom="5dp"
    android:clickable="true"
    android:background="@color/cardColor"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:foregroundGravity="right"
            android:src="@drawable/mdvalley"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/text"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/date" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/date"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_above="@+id/text"
            android:layout_alignStart="@+id/text" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="16dp"
            android:text="ProtÃ©gete contra la #influneza siguiendo estas recomendaciones http://t.co/dyLBzrH2Kg"
            android:id="@+id/text"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_social_share"
            android:layout_marginRight="8dp"
            android:layout_alignBottom="@+id/date"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clickTo"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"/>


</android.support.v7.widget.CardView>