<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp"
    android:paddingBottom="5dp"
    android:clickable="true"
    android:background="@color/cardColor"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="16dp"
            android:text="Protégete contra la #influneza siguiendo estas recomendaciones http://t.co/dyLBzrH2Kg"
            android:id="@+id/text"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/img"
            android:layout_marginTop="29dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/date"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="24dp"
            android:layout_above="@+id/view2"
            android:layout_alignStart="@+id/text" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#c0c0c0"
            android:id="@+id/view2"
            android:longClickable="false"
            android:layout_above="@+id/share"
            android:layout_marginBottom="9dp"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comparitr"
            android:id="@+id/share"
            android:textColor="@color/colorPrimary"
            android:clickable="true"
            android:background="@drawable/ripple_flat_blue"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="0dp"
            android:textSize="13dp"
            android:layout_alignTop="@+id/view"
            android:layout_toEndOf="@+id/view" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver más"
            android:id="@+id/view"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textSize="13dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>