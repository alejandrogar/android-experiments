<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/appbar_padding_top"
    android:paddingBottom="@dimen/appbar_padding_top"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="mediaapp.com.practiceapp.MainActivity">


    <TextView
        android:id="@+id/tags"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ejemplo de Tag List"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:scrollbars="none"
        android:layout_below="@+id/tags"
        android:layout_alignParentStart="true"
        android:id="@+id/horizontalScrollView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:text="LISTA DE ÉXITOS"
                android:textSize="13dp"
                android:clickable="true"
                android:textColor="@color/white"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10px"
                android:background="@drawable/back_circle_corners"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JUEGOS"
                android:textSize="13dp"
                android:clickable="true"
                android:textColor="@color/white"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10px"
                android:background="@drawable/back_circle_corners"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAMILIA"
                android:textSize="13dp"
                android:clickable="true"
                android:textColor="@color/white"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10px"
                android:background="@drawable/back_circle_corners"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CATEGORIAS"
                android:textSize="13dp"
                android:clickable="true"
                android:textColor="@color/white"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10px"
                android:background="@drawable/back_circle_corners"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECCIÓN DE LOS EDITORES"
                android:textSize="13dp"
                android:clickable="true"
                android:textColor="@color/white"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10px"
                android:background="@drawable/back_circle_corners"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FUCK YEAH!"
                android:textSize="13dp"
                android:clickable="true"
                android:textColor="@color/white"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10px"
                android:background="@drawable/back_circle_corners"/>
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontalScrollView"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RecyclerView Example"
                android:id="@+id/recyclerview"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="30dp"
                android:layout_alignEnd="@+id/SlideImage"
                android:layout_alignStart="@+id/SlideImage" />

            <Button
                android:id="@+id/SlideImage"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Image Slide"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/recyclerview"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/scrollslideimage"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Slide on ScrollingView"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/SlideImage"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/chatFirebse"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="FireBase Example"
                android:textColor="@color/white"
                android:background="@drawable/ripple"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="23dp"
                android:layout_below="@+id/scrollslideimage"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
