<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mediaapp.com.practiceapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Recyclerexample"
            android:label="@string/title_activity_recyclerexample"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".detail_item"
            android:label="@string/title_activity_detail_item"
            android:parentActivityName=".Recyclerexample"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".img_slider"
            android:label="@string/title_activity_img_slider"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScrollingSlide"
            android:label="@string/title_activity_scrolling_slide"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FirebaseExample"
            android:label="@string/title_activity_firebase_example"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".slide_detail"
            android:label="@string/title_activity_slide_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
